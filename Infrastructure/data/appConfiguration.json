{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "configStoreName": {
      "type": "string",
      "metadata": {
        "description": "Specifies the name of the App Configuration store."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Specifies the Azure location where the app configuration store should be created."
      }
    },
    "appConfigurationSku": {
      "type": "string",
      "defaultValue": "Standard",
      "metadata": {
        "description": "Sku"
      }
    },
    "appConfigurationKeyData": {
      "type": "array",
      "metadata": {
        "description": "Array of Objects that contain the key name, value, tag and contentType"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.AppConfiguration/configurationStores",
      "apiVersion": "2020-06-01",
      "name": "[parameters('configStoreName')]",
      "location": "[parameters('location')]",
      "identity": { "type": "SystemAssigned" },
      "properties": {},
      "sku": {
        "name": "standard"
      }
    },
    {
      "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
      "apiVersion": "2020-07-01-preview",
      "name": "[concat(parameters('configStoreName'), '/', parameters('appConfigurationKeyData')[copyIndex()].key)]",
      "copy": {
        "name": "keyValueCopy",
        "count": "[length(parameters('appConfigurationKeyData'))]"
      },
      "dependsOn": [
        "[parameters('configStoreName')]"
      ],
      "properties": {
        "value": "[parameters('appConfigurationKeyData')[copyIndex()].value]",
        "contentType": "[parameters('appConfigurationKeyData')[copyIndex()].contentType]",
        "tags": "[if(contains(parameters('appConfigurationKeyData')[copyIndex()], 'tag'), parameters('appConfigurationKeyData')[copyIndex()].tag, json('null'))]"
      }
    }
  ]
}